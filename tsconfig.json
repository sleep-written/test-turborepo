{
    "display": "default",
    "compilerOptions": {
        "target": "ES2022",
        "module": "ES2022",
        "moduleResolution": "node",
        
        "strict": true,
        "sourceMap": true,
        "emitDecoratorMetadata": true,
        "experimentalDecorators": true,

        "esModuleInterop": true,
        "isolatedModules": true,
        "importsNotUsedAsValues": "error"
    },
    "exclude": [
        "./node_modules/*",
        "./**/*.test.ts",
        "./**/*.example.ts"
    ]
}